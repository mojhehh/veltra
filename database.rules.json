{
  "rules": {
    "users": {
      "$userId": {
        ".read": true,
        ".write": true,
        "data": {
          ".read": true,
          ".write": true
        },
        "profile": {
          ".read": true,
          ".write": true
        },
        "pending": {
          ".read": true,
          ".write": true
        }
      }
    },
    "melodify_libraries": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "settings": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "achievements": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "backends": {
      ".read": true,
      ".write": true
    },
    "support": {
      ".read": true,
      ".write": true,
      "requests": {
        ".read": true,
        ".write": true,
        ".indexOn": ["userId", "status", "createdAt"]
      },
      "chats": {
        ".read": true,
        ".write": true
      }
    }
  }
