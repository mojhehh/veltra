{
  "rules": {
    "users": {
      "$userId": {
        ".read": true,
        ".write": true,
        "data": {
          ".read": true,
          ".write": true
        },
        "profile": {
          ".read": true,
          ".write": true
        },
        "pending": {
          ".read": true,
          ".write": true
        }
      }
    },
    "melodify_libraries": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "settings": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "achievements": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "backends": {
      ".read": true,
      ".write": true
    },
    "youtube_data": {
      "$userId": {
        ".read": true,
        ".write": true
      }
    },
    "youtube_comments": {
      ".read": true,
      "$videoId": {
        ".read": true,
        ".write": true,
        "$commentId": {
          ".read": true,
          ".write": true
        }
      }
    },
    "youtube_social": {
      ".read": true,
      ".write": true,
      "videostats": {
        ".read": true,
        ".write": true,
        "$videoId": {
          ".read": true,
          ".write": true
        }
      },
      "$userId": {
        ".read": true,
        ".write": true,
        "subscriptions": {
          ".read": true,
          ".write": true
        },
        "likes": {
          ".read": true,
          ".write": true
        },
        "notifications": {
          ".read": true,
          ".write": true,
          "$notifId": {
            ".read": true,
            ".write": true
          }
        }
      }
    },
    "support": {
      ".read": true,
      ".write": true,
      "requests": {
        ".read": true,
        ".write": true,
        ".indexOn": ["userId", "status", "createdAt"]
      },
      "chats": {
        ".read": true,
        ".write": true
      }
    }
  }
}
